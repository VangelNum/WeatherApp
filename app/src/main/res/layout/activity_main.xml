<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/pb_loading"
            android:layout_centerInParent="true"
            android:visibility="gone">

        </ProgressBar>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible"
            android:id="@+id/rl_main_layout">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:id="@+id/cv_toolbar"
                android:elevation="@dimen/padding_x_large">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/purple_200"
                    android:id="@+id/rl_toolbar">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_margin="@dimen/padding_large"
                        app:cardCornerRadius="@dimen/padding_x_small">

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/et_get_city_name"
                            android:hint="@string/search_places"
                            android:paddingStart="@dimen/padding_large"
                            android:paddingEnd="@dimen/padding_large"
                            android:imeOptions="actionSearch"
                            android:inputType="text"
                            android:textColor="@color/black"
                            android:background="@color/white"
                            android:drawablePadding="@dimen/padding_large"
                            android:drawableStart="@drawable/ic_baseline_search_24"></EditText>
                    </androidx.cardview.widget.CardView>
                </RelativeLayout>


            </androidx.cardview.widget.CardView>

            <RelativeLayout
                android:id="@+id/rl_sub_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/cv_toolbar">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:id="@+id/iv_weather_bg"
                        android:src="@color/snow">

                    </ImageView>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/padding_large"
                        android:layout_marginStart="@dimen/padding_x_large"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_date_and_time"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poiret_one"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_large"
                            android:text="@string/demo_date">

                        </TextView>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/padding_large"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/tv_day_max_temp"
                                android:fontFamily="@font/poiret_one"
                                android:textColor="@color/white"
                                android:layout_weight="3"
                                android:text="@string/day"
                                android:textSize="@dimen/text_large">

                            </TextView>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/tv_day_min_temp"
                                android:fontFamily="@font/poiret_one"
                                android:textColor="@color/white"
                                android:layout_weight="1"
                                android:text="@string/day"
                                android:textSize="@dimen/text_large">

                            </TextView>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/padding_large"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:id="@+id/tv_temp"
                                android:fontFamily="@font/poiret_one"
                                android:textColor="@color/white"
                                android:layout_weight="1"
                                android:text="@string/main_temp"
                                android:textSize="@dimen/text_super_large">

                            </TextView>

                            <ImageView
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:layout_marginTop="@dimen/padding_large"
                                android:layout_marginEnd="@dimen/padding_large"
                                android:id="@+id/iv_weather_icon"
                                android:src="@drawable/clear">

                            </ImageView>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/padding_large"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/tv_feels_like"
                                android:fontFamily="@font/poiret_one"
                                android:textColor="@color/white"
                                android:layout_weight="1"
                                android:text="@string/feels_alike"
                                android:textSize="@dimen/text_large">

                            </TextView>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/tv_weather_type"
                                android:fontFamily="@font/poiret_one"
                                android:textColor="@color/white"
                                android:layout_weight="3"
                                android:text="@string/weather_type"
                                android:textSize="@dimen/text_large">

                            </TextView>
                        </LinearLayout>
                    </LinearLayout>


                </FrameLayout>

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="@dimen/padding_x_large"
                    android:layout_marginTop="50dp"
                    android:layout_marginRight="@dimen/padding_x_large"
                    android:paddingBottom="@dimen/padding_x_large"
                    android:elevation="@dimen/padding_x_small"
                    app:cardCornerRadius="@dimen/padding_large"
                    android:layout_marginBottom="@dimen/padding_x_large"
                    app:cardMaxElevation="@dimen/padding_x_small"
                    app:cardElevation="@dimen/padding_x_small">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="0dp"
                            android:background="@color/snow"
                            android:id="@+id/ll_main_bg_above"
                            android:orientation="horizontal">

                            <RelativeLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:padding="@dimen/padding_x_small"
                                android:id="@+id/rl_pressure_wrapper">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_centerInParent="true"
                                    android:orientation="vertical"
                                    android:padding="@dimen/padding_x_small">

                                    <ImageView
                                        android:layout_width="25dp"
                                        android:layout_height="25dp"
                                        android:layout_gravity="center_horizontal"
                                        android:src="@drawable/pressure"></ImageView>

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/poiret_one"
                                        android:textSize="@dimen/text_x_large"
                                        android:gravity="center"
                                        android:id="@+id/tv_pressure"
                                        android:textColor="@color/white"
                                        android:text="@string/default_numbers">

                                    </TextView>

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/poiret_one"
                                        android:textSize="@dimen/text_med"
                                        android:gravity="center"
                                        android:textColor="@color/white"
                                        android:text="@string/pressure">

                                    </TextView>

                                </LinearLayout>

                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:padding="@dimen/padding_x_small"
                                android:id="@+id/rl_humidity_wrapper">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_centerInParent="true"
                                    android:orientation="vertical"
                                    android:padding="@dimen/padding_x_small">

                                    <ImageView
                                        android:layout_width="25dp"
                                        android:layout_height="25dp"
                                        android:layout_gravity="center_horizontal"
                                        android:src="@drawable/pressure"></ImageView>

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/poiret_one"
                                        android:textSize="@dimen/text_x_large"
                                        android:gravity="center"
                                        android:id="@+id/tv_humidity"
                                        android:textColor="@color/white"
                                        android:text="@string/default_numbers">

                                    </TextView>

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/poiret_one"
                                        android:textSize="@dimen/text_med"
                                        android:gravity="center"
                                        android:textColor="@color/white"
                                        android:text="@string/pressure">

                                    </TextView>

                                </LinearLayout>

                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:padding="@dimen/padding_x_small"
                                android:id="@+id/rl_wind_speed_wrapper">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_centerInParent="true"
                                    android:orientation="vertical"
                                    android:padding="@dimen/padding_x_small">

                                    <ImageView
                                        android:layout_width="25dp"
                                        android:layout_height="25dp"
                                        android:layout_gravity="center_horizontal"
                                        android:src="@drawable/windspeed"></ImageView>

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/poiret_one"
                                        android:textSize="@dimen/text_x_large"
                                        android:gravity="center"
                                        android:id="@+id/tv_wind_speed"
                                        android:textColor="@color/white"
                                        android:text="@string/default_numbers">

                                    </TextView>

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/poiret_one"
                                        android:textSize="@dimen/text_med"
                                        android:gravity="center"
                                        android:textColor="@color/white"
                                        android:text="@string/pressure">

                                    </TextView>

                                </LinearLayout>


                            </RelativeLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="0dp"
                            android:background="@color/snow"
                            android:id="@+id/ll_main_bg_below"
                            android:orientation="horizontal">

                            <RelativeLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:padding="@dimen/padding_x_small"
                                android:id="@+id/rl_sunrise_wrapper">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_centerInParent="true"
                                    android:orientation="vertical"
                                    android:padding="@dimen/padding_x_small">

                                    <ImageView
                                        android:layout_width="25dp"
                                        android:layout_height="25dp"
                                        android:layout_gravity="center_horizontal"
                                        android:src="@drawable/sunrise"></ImageView>

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/poiret_one"
                                        android:textSize="@dimen/text_x_large"
                                        android:gravity="center"
                                        android:id="@+id/tv_sunrise"
                                        android:textColor="@color/white"
                                        android:text="@string/default_numbers">

                                    </TextView>

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/poiret_one"
                                        android:textSize="@dimen/text_med"
                                        android:gravity="center"
                                        android:textColor="@color/white"
                                        android:text="@string/pressure">

                                    </TextView>

                                </LinearLayout>

                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:padding="@dimen/padding_x_small"
                                android:id="@+id/rl_sunset_wrapper">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_centerInParent="true"
                                    android:orientation="vertical"
                                    android:padding="@dimen/padding_x_small">

                                    <ImageView
                                        android:layout_width="25dp"
                                        android:layout_height="25dp"
                                        android:layout_gravity="center_horizontal"
                                        android:src="@drawable/sunset"></ImageView>

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/poiret_one"
                                        android:textSize="@dimen/text_x_large"
                                        android:gravity="center"
                                        android:id="@+id/tv_sunset"
                                        android:textColor="@color/white"
                                        android:text="@string/default_numbers">

                                    </TextView>

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/poiret_one"
                                        android:textSize="@dimen/text_med"
                                        android:gravity="center"
                                        android:textColor="@color/white"
                                        android:text="@string/pressure">

                                    </TextView>

                                </LinearLayout>

                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:padding="@dimen/padding_x_small"
                                android:id="@+id/rl_temp_farenhite_wrapper">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_centerInParent="true"
                                    android:orientation="vertical"
                                    android:padding="@dimen/padding_x_small">

                                    <ImageView
                                        android:layout_width="25dp"
                                        android:layout_height="25dp"
                                        android:layout_gravity="center_horizontal"
                                        android:src="@drawable/temp"></ImageView>

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/poiret_one"
                                        android:textSize="@dimen/text_x_large"
                                        android:gravity="center"
                                        android:id="@+id/tv_temp_farenhite"
                                        android:textColor="@color/white"
                                        android:text="@string/default_numbers">

                                    </TextView>

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/poiret_one"
                                        android:textSize="@dimen/text_med"
                                        android:gravity="center"
                                        android:textColor="@color/white"
                                        android:text="@string/pressure">

                                    </TextView>

                                </LinearLayout>


                            </RelativeLayout>

                        </LinearLayout>

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

            </RelativeLayout>

        </RelativeLayout>
    </RelativeLayout>
</layout>